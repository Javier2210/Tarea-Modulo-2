<?php
echo "Ordena tres numeros\n";

$num1 = readline("Introduce el primer numero: ");

$num2 = readline("Introduce el segundo numero: ");

$num3 = readline("Introduce el tercer numero: ");

if ($num1 > $num2) {
    $temp = $num1;
    $num1 = $num2;
    $num2 = $temp;
}

else if ($num1 > $num3) {
    $temp = $num1;
    $num1 = $num3;
    $num3 = $temp;
}

else if ($num2 > $num3) {
    $temp = $num2;
    $num2 = $num3;
    $num3 = $temp;
}

echo "Los numeros ordenados de menor a mayor: $num1, $num2, $num3\n";
?>






<?php
echo "Calculadora\n";


$a = readline("Ingrese el primer numero: ");
$b = readline("Ingrese el segundo numero: ");
$operacion = readline("Ingrese la operacion (+,*,-,/): ");

switch($operacion){ 
    case '+':
        $resultado = $a + $b;
        echo "El resultado es: $resultado \n";
        break;
    case '-':
        $resultado = $a - $b;
        echo "El resultado es: $resultado\n";
        break;
    case '*':
        $resultado = $a * $b;
        echo "El resultado es: $resultado\n";
        break;

    case '/':
        if ($b != 0) {
            $resultado = $a / $b;
            echo "El resultado es: $resultado\n";
        } else {
            echo "Error, no se puede dividir entre 0.\n";
        }
        break;
    default:
        echo "Operación inválida. Ingrese una operación válida (+, -, *, /).\n";
        break;
}        
?>






<?php
echo "Tabla de multiplicar\n";
$numero = (int)readline ("Indique un numero del 1 al 10: "); 

 if ($numero <= 10) {
    echo "$numero * 1 = " . ($numero * 1) . "\n";
    echo "$numero * 2 = " . ($numero * 2) . "\n";
    echo "$numero * 3 = " . ($numero * 3) . "\n";
    echo "$numero * 4 = " . ($numero * 4) . "\n";
    echo "$numero * 5 = " . ($numero * 5) . "\n";
    echo "$numero * 6 = " . ($numero * 6) . "\n";
    echo "$numero * 7 = " . ($numero * 7) . "\n";
    echo "$numero * 8 = " . ($numero * 8) . "\n";
    echo "$numero * 9 = " . ($numero * 9) . "\n";
    echo "$numero * 10 = " . ($numero * 10) . "\n";
} else {
    echo"Numero invalido";
 }
?>





