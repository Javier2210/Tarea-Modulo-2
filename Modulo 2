<?php
$suma = 0;
for ($i = 1; $i <= 100; $i++){
    if ($i % 2 == 0){
       $suma +=$i;}
}

echo "La suma de numeros pares entre el 2 y 100 es: $suma"
?>





<?php
$oracion = readline("Ingresa una oracion: ");

$vocales = 0;


for ($i = 0; $i < strlen($oracion); $i++) {
    if (in_array($oracion[$i], ['a', 'e', 'i', 'o', 'u'])) {
        $vocales++;
    }
}

echo "El numero de vocales en la oracion es: $vocales";
?>





<?php
$celsius = (float)readline("Ingresa la temperatura en grados Celsius: ");

$fahrenheit = ($celsius * 9 / 5) + 32;

echo "La temperatura en grados Fahrenheit es: $fahrenheit\n";
?>






<?php
